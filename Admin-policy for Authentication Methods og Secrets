# Admin-policy for Authentication Methods og Secrets

# Full kontroll over Authentication Methods
path "sys/auth/*" {
  capabilities = ["create", "read", "update", "delete", "list", "sudo"]
}

# Tillat listing av auth backends
path "sys/auth" {
  capabilities = ["read", "list"]
}

# Full kontroll over Secrets Engines (mount/unmount/configure)
path "sys/mounts/*" {
  capabilities = ["create", "read", "update", "delete", "list", "sudo"]
}

# Tillat listing av tilgjengelige secrets engines
path "sys/mounts" {
  capabilities = ["read", "list"]
}

# Full kontroll over alle secrets i KV
# (kan byttes ut med "kv/*" eller "secret/*" avhengig av engine)
path "secret/*" {
  capabilities = ["create", "read", "update", "delete", "list", "sudo"]
}
